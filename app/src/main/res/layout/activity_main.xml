<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/valorConta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="280dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:hint="valor da conta"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.075"
        app:layout_constraintStart_toEndOf="@+id/iconeDolar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/qtdPessoa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:hint="quantidade de pessoas"
        android:inputType="text"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.076"
        app:layout_constraintStart_toEndOf="@+id/iconePessoa"
        app:layout_constraintTop_toBottomOf="@+id/valorConta" />

    <ImageView
        android:id="@+id/iconeDolar"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/valorConta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/valorConta"
        app:layout_constraintVertical_bias="0.48"
        app:srcCompat="@drawable/icons8_us_dollar_circled_100" />

    <ImageView
        android:id="@+id/iconePessoa"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/qtdPessoa"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/qtdPessoa"
        app:layout_constraintVertical_bias="0.48"
        app:srcCompat="@drawable/icons8_person_96" />

    //2. Ícone(s) Principal(is)

    <ImageButton
        android:id="@+id/btnCompart"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginEnd="60dp"
        android:backgroundTint="#00FFFFFF"
        android:contentDescription="Ícone de Compartilhamento. Click e compartilhe a mensagem com os indivíduos que racharão com você."
        app:layout_constraintBottom_toBottomOf="@+id/btnSom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnSom"
        app:srcCompat="@drawable/icons8_share_64" />

    <ImageButton
        android:id="@+id/btnSom"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="#00FFFFFF"
        android:contentDescription="Ícone de Som. Click e escute a mensagem para os indivíduos que racharão com você."
        android:onClick="clickFale"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/perPessoa"
        app:srcCompat="@drawable/sound_67" />

    <TextView
        android:id="@+id/perPessoa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/qtdPessoa" />

    <ImageView
        android:id="@+id/imagemPrincipal1"
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:layout_marginTop="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.374"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/vamos_rachar" />

    <ImageView
        android:id="@+id/imagemPrincipal2"
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:layout_marginTop="168dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.693"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/vamos_rachar___copia" />

    <TextView
        android:id="@+id/appTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="128dp"
        android:text="VAMOS RACHAR!"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.547"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>